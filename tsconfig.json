{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "es2017", "esnext"],
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/declare"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
